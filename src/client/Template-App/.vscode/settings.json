// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/bin": true,
        "**/obj": true,
        "**/Properties": true,
        "**/*.csproj*": true,
        "**/Web*.config": true
    },
    "files.insertFinalNewline": true,
    // Editor
    "editor.detectIndentation": false,
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.trimAutoWhitespace": true,
    "editor.formatOnSave": true,
    "[html]": {
        "editor.formatOnSave": false
    },
    // Typescript
    "typescript.format.insertSpaceAfterCommaDelimiter": true,
    "typescript.format.insertSpaceAfterSemicolonInForStatements": true,
    "typescript.format.insertSpaceAfterKeywordsInControlFlowStatements": true,
    "typescript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": true,
    "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": false,
    "typescript.format.insertSpaceAfterOpeningAndBeforeClosingTemplateStringBraces": true,
    "typescript.format.placeOpenBraceOnNewLineForFunctions": false,
    "typescript.format.placeOpenBraceOnNewLineForControlBlocks": false,
    "typescript.preferences.importModuleSpecifier": "relative",
    "typescript.implementationsCodeLens.enabled": true,
    "typescript.tsdk": "node_modules\\typescript\\lib",
    // Linters
    "beautify.options": {
        "indent_size": 4,
        "end_with_newline": true
    },
    // TypeScript Import Sorter
    "importSorter.generalConfiguration.sortOnBeforeSave": true,
    "importSorter.sortConfiguration.customOrderingRules.rules": [
        {
            "type": "importMember",
            "regex": "^$",
            "orderLevel": 5,
            "disableSort": true
        },
        {
            "regex": "^(@|(angular))",
            "orderLevel": 6
        },
        {
            "regex": "^(@|(?!shared|core|features|\\.))",
            "orderLevel": 10
        },
        {
            "regex": "^(\\.|shared|core|features)",
            "orderLevel": 15
        }
    ],
    "importSorter.importStringConfiguration.maximumNumberOfImportExpressionsPerLine.type": "words",
    "importSorter.importStringConfiguration.maximumNumberOfImportExpressionsPerLine.count": 1,
    "importSorter.importStringConfiguration.trailingComma": "multiLine",
}
